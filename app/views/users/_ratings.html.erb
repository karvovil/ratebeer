<%= turbo_frame_tag "ratings" do %>
  <div data-controller="ratings" class="ratings mb-4">
    <% @user.ratings.each do |rating| %>
      <div class="rating">
        <% if @user == current_user %>
          <input type="checkbox" name="ratings[]" value="<%= rating.id %>" />
        <% end %>
        <span>
          <%= link_to "#{rating.beer.name} ", rating, data: { turbo_frame: "rating_details" }  %> 
          <%= rating.score %>
        </span>
      </div>
    <% end %>
    <span>
      Select all 
    </span>
    <input type="checkbox" name="all" data-action="ratings#select"/>
    </br>
    <% if @user == current_user %>
    <button data-action="click->ratings#destroy">Delete selected</button>
    <% end %>
  </div>
<% end %>