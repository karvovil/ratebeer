<h2>Beer tax calculator</h2>

<div data-controller="calculator" class="container">
  <form data-action="calculator#calculate">
    <div>
				<label>Amount</label>
				<input id="amount_input" type="number" min="0" step="0.001" value="0.000" required="true" data-calculator-target="amount" />
				<label>liters</label>
    </div>
    <div>
       <label>Alcohol by volume (ABV)</label>
       <input id="abv_input" type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="abv" />
       <label>%</label>
    </div>
    <div>
      <label>Price </label>
      <input id="price_input" type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="price" />
      <label>â‚¬</label>
    </div>
    </br>
    <div>
      <p>Value added tax <%= @vat * 100 %>%</p>
    </div>
    </br>
    <button>Calculate</button>
  </form>
  </br>
  <form data-action="calculator#reset">
      <button>Reset</button>
  </form>
  </br>
  <div id="result">
  </div>
</div>   