<h2>Beer tax calculator</h2>

<div data-controller="calculator" class="container">
  <form data-action="calculator#calculate">
    <div>
				<label>Amount</label>
				<select id="amount_input" data-calculator-target="amount" >
					<option value="custom">Custom</option>
					<option value="0.33">0.33</option>
					<option value="0.375">0.375</option>
					<option value="0.5">0.5</option>
					<option value="0.66">0.66</option>
					<option value="0.75">0.75</option>
					<option value="1">1</option>
					<option value="1.3">1.3</option>
					<option value="1.5">1.5</option>
				<select>
				<label>liters</label>
    </div>
    <div>
       <label>Custom</label>
       <input id="custom_input" type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="custom" />
       <label>liters</label>
    </div>
    <div>
       <label>Alcohol by volume (ABV)</label>
       <input id="abv_input" type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="abv" />
       <label>%</label>
    </div>
    <div>
      <label>Price </label>
      <input id="price_input" type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="price" />
      <label>â‚¬</label>
    </div>
    </br>
    <div>
      <p>Value added tax <%= @vat * 100 %>%</p>
    </div>
    </br>
    <button>Calculate</button>
  </form>
  </br>
  <form data-action="calculator#reset">
      <button>Reset</button>
  </form>
  </br>
  <div id="result">
  </div>
</div>   