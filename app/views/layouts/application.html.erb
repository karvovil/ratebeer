<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers', beers_path %>
      <%= link_to 'ratings', ratings_path %>
      <%= link_to 'users', users_path %>
      
      <% if not session[:user_id].nil? %>
        <%= link_to current_user.username, user_path(session[:user_id]) %>
        <%= link_to 'Rate a new beer', new_rating_path %>
        <%= link_to "Log out", session_path,
          data: { "turbo-method": :delete }, class: "link-secondary smooth"
        %>
      <% else %>
        <%= link_to 'Sign up', new_user_path %>
        <%= link_to 'Log in', new_session_path %>
      <% end %>
    </div>
      <% if session[:last_rating].nil? %>
        <p>no ratings given</p>
      <% else %>
        <p>previous rating: <%= session[:last_rating] %></p>
      <% end %>


    <%= yield %>
  </body>
</html>
