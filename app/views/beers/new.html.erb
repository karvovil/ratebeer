<h1>New beer</h1>
<% if @beer.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

    <ul>
      <% @beer.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@beer) do |f| %>
  <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s) %>
  <%= f.select :style_id, options_from_collection_for_select(@styles, :id, :name) %>
  name: <%= f.text_field :name %>

  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Back to beers", beers_path %>
</div>
