<div data-controller="newbrew">
  <%= form_with(model: brewery) do |form| %>
    <% if brewery.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(brewery.errors.count, "error") %> prohibited this brewery from being saved:</h2>

        <ul>
          <% brewery.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, data: { "newbrew-target": "name" } %>
    </div>

    <div>
      <%= form.label :year, style: "display: block" %>
      <%= form.number_field :year, data: { "newbrew-target": "year" } %>
    </div>

    <div>
      <%= form.label :active, style: "display: block" %>
      <%= form.check_box :active, data: { "newbrew-target": "active" } %>
    </div>
    
    <% if current_user %>
      <button data-action="click->newbrew#reset">Reset</button>
    <% end %>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
