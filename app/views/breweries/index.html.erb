<%= turbo_stream_from "breweries_index" %>
<h1>Breweries</h1>
<p> Number of breweries: <%= @active_breweries.count + @retired_breweries.count %> </p>

<h2>Active</h2>
<div id= "active_count_id">
  <%= render "brewery_count", status: "active", count: @active_breweries.count %>
</div>
<%= turbo_frame_tag "active_breweries_tag", src: active_breweries_path do %>
    Finding active breweries...
<% end %>

<h2>Retired</h2>
<div id= "retired_count_id">
    <%= render "brewery_count", status: "retired", count: @retired_breweries.count %>
</div>
<%= turbo_frame_tag "retired_breweries_tag", src: retired_breweries_path do %>
    Finding retired breweries...
<% end %>

<p>
  <%=link_to 'list of beers', beers_path, class:"btn btn-secondary" %>
</p>
<%= turbo_frame_tag "new_brewery", src: new_brewery_path if current_user %>