<h1>Breweries</h1>

<p>Number of breweries: <%= @breweries.count %></p>

<div id="breweries">
  <% @breweries.each do |brewery| %>
    <div id="<%= dom_id brewery %>">
      <p>
        <%= link_to brewery.name, brewery %>
      </p>
    
      <p>
        <strong>Year:</strong>
        <%= brewery.year %>
      </p>
    
    </div>
  <% end %>
  <p>
    <%=link_to 'list of beers', beers_path, class:"btn btn-secondary" %>
  </p>
</div>
<%= link_to('New Brewery', new_brewery_path, class:"btn btn-success") if current_user %>