<div id="<%= dom_id brewery %>">
  <p>
    <h2>
      <strong><%= brewery.name%></strong>
    </h2>
    <i> Established at <%= brewery.year %> </i>
    <% if not brewery.active  %>
      <span class="badge bg-secondary">retired</span>
    <% end %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= brewery.year %>
  </p>
  <p>
    Number of beers: <%= brewery.beers.count %>
  </p>
  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>
    <p>
    <%=link_to 'list of beers', beers_path, class:"btn btn-secondary" %>
  </p>
  <p>
    <% if brewery.ratings.empty? %>
      brewery has not yet been rated!
    <% else %> 
      Beer has <%= pluralize(brewery.ratings.count, 'rating') %>
      with an average of <%= brewery.average_rating %> 
    <% end %>
  </p>
</div>
