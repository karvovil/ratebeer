<%= render @beer_club %>

<div id="members">
  <strong>Members:</strong>
  <ul>
    <% @beer_club.users.each do |user| %>
      <li><%= link_to user.username, user %></li>
    <% end %>
  </ul>
</div>

<% if current_user %>

  <% if current_user.beer_clubs.include?(@beer_club) %>
    <%= form_with(
      url: "/memberships/#{(current_user.memberships & @beer_club.memberships).first.id}", method: :delete) do |form| %>
      <%= form.submit "End the membership" %>
    <% end %>

  <% else %>
    <%= form_with(model: @membership) do |form| %>
      <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.submit "Join the beer club" %>
    <% end %>
  <% end %>

<% end %>
